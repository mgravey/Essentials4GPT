{
    "manifest_version": 3,
    "name": "Essentials4GPT",
    "description": "__MSG_extensionDescription__",
    "version": "0.1.2",
    "icons":
    {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "64": "icons/icon-64.png",
        "128": "icons/icon-128.png"
    },
    "options_page": "options.html",
    "permissions":
    [
        "storage"
    ],
    "content_scripts":
    [
        {
            "matches":
            [
                "https://chatgpt.com/*"
            ],
            "css":
            [
                "styles.css"
            ],
            "js":
            [
                "main.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches":
            [
                "https://chatgpt.com/*"
            ],
            "js":
            [
                "mainThread.js"
            ],
            "run_at": "document_end",
            "world": "MAIN"
        }
    ],
    "action":
    {
        "default_icon":
        {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "64": "icons/icon-64.png",
            "128": "icons/icon-128.png"
        }
    },
    "background":
    {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions":
    [
         "https://chatgpt.com/*"
    ],
    "default_locale": "en",
    "web_accessible_resources":
    [
        {
            "resources":
            [
                "icons/*",
                "modules/*",
                "materials/*"
            ],
            "matches":
            [
                "https://chatgpt.com/*"
            ]
        }
    ],
    "content_security_policy": {
        "style-src": "'self' 'unsafe-inline' https://fonts.googleapis.com"
    }
}